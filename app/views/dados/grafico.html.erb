<div class="container">
<h2 class="text-primary mb-4">Meu Gr√°fico</h2>
<canvas id="meu-grafico"></canvas>
  <div class="row">
    <div class="col-md-12">
    </div>
    <div class="col-md-12">
      <h2 class="text-primary mb-4">Tabela de Dados</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Data</th>
              <th>Valor</th>
            </tr>
          </thead>
          <tbody>
            <% @dados_grafico[:labels].each_with_index do |data, index| %>
              <tr>
                <td class="font-weight-bold"><%= data %></td>
                <td><%= @dados_grafico[:datasets][0][:data][index] %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

    
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>   

<script>
  var ctx = document.getElementById('meu-grafico').getContext('2d');
  var myChart = new Chart(ctx, {
    type: 'line',
    data: <%= @dados_grafico.to_json.html_safe %>,
    options: {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true,
            fontColor: "#6c757d"
          },
          gridLines: {
            color: "#dee2e6"
          }
        }],
        xAxes: [{
          ticks: {
            fontColor: "#6c757d"
          },
          gridLines: {
            color: "#dee2e6"
          }
        }]
      },
      legend: {
        display: false
      },
      elements: {
        line: {
          borderWidth: 2,
          borderColor: "#007bff",
          pointRadius: 3,
          pointBackgroundColor: "#007bff"
        },
        point: {
          hitRadius: 10,
          hoverRadius: 5
        }
      }
    }
  });
</script>
